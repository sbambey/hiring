<% provide(:title, resource.email) %>

<div class="container">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit <%= resource_name.to_s.humanize %></h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <div class='alert alert-info' role='alert'>
            <%= render "devise/shared/current_password_field", f: f, args: { label_addons: "(we need your current password to confirm your changes)" } %>
          </div>

          <%= render "shared/text_field", f: f, attribute: :username, args: { placeholder: "Username", label_class: "control-label" } %>
          
          <%= render "shared/text_field", f: f, attribute: :email, args: { placeholder: "Email", label_class: "control-label" } %>

          <%= render "devise/shared/password_field", f: f, args: { label_addons: "(leave blank if you don't want to change it)" } %>

          <%= render "devise/shared/password_confirmation_field", f: f, args: {} %>

          <%= f.submit "Update", class: "btn btn-default btn-submit btn-green btn-bottom" %>
        <% end %>
      </div>
    </div>
  </div>
</div>